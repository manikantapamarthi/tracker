<section class="text-center m-5">
  <h1 class="text-center" >Welcome To Tacker</h1>
  <h5><%= current_user&.email %></h5>
  <% if current_user&.admin? %>
    <p>you can check dashboard <%= link_to "here", admin_users_path  %></p>
  <% else %>
    <p>you can check your shipments <%= link_to "here", shipments_path %></p>
  <%end%>
  <%=
      link_to_if(current_user.nil?, "Login", new_user_session_path, class: 'btn btn-primary m-5') do
    link_to('Sign out', destroy_user_session_path, data: { turbo_method: :"delete" }, class: 'btn btn-danger m-5')
      end
  %>
</section>